# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 100
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2

[*.lua]
indent_size = 2
max_line_length = 120

# File used for git commit message editing.
[COMMIT_EDITMSG]
max_line_length = 72
